.container {
  padding: 24rpx;
  padding-bottom: 60rpx;
  min-height: 100vh;
  background: #f8fafc;
}

/* 提示栏 */
.notice-bar {
  background: #fef3c7;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.notice-icon {
  font-size: 32rpx;
}

.notice-text {
  font-size: 26rpx;
  color: #92400e;
  flex: 1;
}

/* 加载 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #e2e8f0;
  border-top-color: #6366f1;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #64748b;
}

/* 表单卡片 */
.form-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.form-card.meta-info {
  background: #f8fafc;
  border: 2rpx dashed #e2e8f0;
}

.form-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 28rpx;
  display: flex;
  align-items: center;
}

.form-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-value {
  font-size: 32rpx;
  color: #1e293b;
  font-weight: 600;
  padding: 20rpx 24rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  line-height: 1.5;
}

.form-value.price {
  color: #ef4444;
  font-size: 40rpx;
  font-weight: 800;
}

.form-value.promo {
  color: #f59e0b;
  background: #fef3c7;
}

/* 元信息 */
.meta-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.meta-row:last-child {
  margin-bottom: 0;
}

.meta-label {
  font-size: 26rpx;
  color: #64748b;
  width: 160rpx;
  flex-shrink: 0;
}

.meta-value {
  font-size: 26rpx;
  color: #1e293b;
  font-weight: 500;
}

/* 操作按钮 */
.action-section {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.btn-back {
  width: 100%;
  height: 100rpx;
  background: #f1f5f9 !important;
  color: #64748b !important;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 50rpx !important;
}

.btn-back::after {
  border: none;
}

.btn-back:active {
  background: #e2e8f0 !important;
}