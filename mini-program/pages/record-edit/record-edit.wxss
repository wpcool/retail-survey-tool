.container {
  padding: 24rpx;
  padding-bottom: 60rpx;
  min-height: 100vh;
  background: #f8fafc;
}

/* 加载 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #e2e8f0;
  border-top-color: #6366f1;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #64748b;
}

/* 表单卡片 */
.form-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.form-card.readonly {
  background: #f8fafc;
  border: 2rpx dashed #e2e8f0;
}

.form-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 28rpx;
  display: flex;
  align-items: center;
}

.form-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.readonly-tag {
  font-size: 22rpx;
  color: #94a3b8;
  font-weight: 400;
  margin-left: auto;
  background: #e2e8f0;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.form-item {
  margin-bottom: 24rpx;
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #475569;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required {
  color: #ef4444;
}

.form-value {
  height: 90rpx;
  background: #e2e8f0;
  border-radius: 16rpx;
  padding: 0 28rpx;
  font-size: 30rpx;
  color: #64748b;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.form-input {
  width: 100%;
  height: 90rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 0 28rpx;
  font-size: 30rpx;
  color: #1e293b;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #6366f1;
  background: #fff;
}

.price-input {
  padding-right: 80rpx;
}

.price-unit {
  position: absolute;
  right: 28rpx;
  bottom: 30rpx;
  font-size: 28rpx;
  color: #64748b;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 24rpx 28rpx;
  font-size: 30rpx;
  color: #1e293b;
  box-sizing: border-box;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.btn-cancel, .btn-save {
  flex: 1;
  height: 100rpx;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 50rpx !important;
}

.btn-cancel {
  background: #f1f5f9 !important;
  color: #64748b !important;
}

.btn-cancel::after {
  border: none;
}

.btn-save {
  background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%) !important;
  color: #fff !important;
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.35) !important;
}

.btn-save::after {
  border: none;
}