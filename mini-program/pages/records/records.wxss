.container {
  padding: 24rpx;
  padding-bottom: 60rpx;
  min-height: 100vh;
  background: #f8fafc;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1e293b;
}

.record-count {
  font-size: 26rpx;
  color: #64748b;
  background: #e2e8f0;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* 筛选栏 */
.filter-bar {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.filter-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #64748b;
  flex-shrink: 0;
}

.filter-value {
  flex: 1;
  font-size: 30rpx;
  color: #1e293b;
  padding: 16rpx 24rpx;
  background: #f8fafc;
  border-radius: 12rpx;
}

.filter-value.placeholder {
  color: #94a3b8;
}

.clear-btn {
  font-size: 28rpx;
  color: #94a3b8;
  padding: 12rpx;
}

/* 记录列表 */
.records-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.record-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f1f5f9;
}

.product-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.category-tag {
  font-size: 24rpx;
  color: #6366f1;
  font-weight: 600;
  background: #eef2ff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.product-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
}

.record-price {
  font-size: 36rpx;
  font-weight: 800;
  color: #ef4444;
  flex-shrink: 0;
}

.record-body {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.info-text {
  flex: 1;
  font-size: 28rpx;
  color: #475569;
  word-break: break-all;
}

.info-text.promo {
  color: #f59e0b;
  font-weight: 500;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 2rpx solid #f1f5f9;
}

.record-time {
  font-size: 24rpx;
  color: #94a3b8;
}

.action-btns {
  display: flex;
  gap: 16rpx;
}

.btn-edit, .btn-delete, .btn-view {
  margin: 0 !important;
  padding: 12rpx 28rpx !important;
  font-size: 26rpx !important;
  border-radius: 12rpx !important;
}

.btn-edit {
  background: #e0e7ff !important;
  color: #6366f1 !important;
}

.btn-delete {
  background: #fee2e2 !important;
  color: #ef4444 !important;
}

.btn-view {
  background: #f1f5f9 !important;
  color: #64748b !important;
}

.btn-edit::after, .btn-delete::after, .btn-view::after {
  border: none !important;
}

/* 日期标签 */
.record-time {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.date-tag {
  font-size: 22rpx;
  padding: 6rpx 14rpx;
  background: #f1f5f9;
  color: #64748b;
  border-radius: 8rpx;
  font-weight: 500;
}

.date-tag.today {
  background: #d1fae5;
  color: #047857;
  font-weight: 600;
}

.time-text {
  font-size: 24rpx;
  color: #94a3b8;
}

/* 加载 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #e2e8f0;
  border-top-color: #6366f1;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #64748b;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  color: #334155;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #94a3b8;
}

/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #64748b;
}

.load-more:active {
  color: #6366f1;
}