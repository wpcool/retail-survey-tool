.container {
  padding: 24rpx;
  padding-bottom: 60rpx;
  min-height: 100vh;
  background: #f8fafc;
}

/* 用户卡片 */
.user-card {
  background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  display: flex;
  align-items: center;
  color: #fff;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(99, 102, 241, 0.3);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 700;
  margin-right: 28rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.user-role {
  font-size: 26rpx;
  opacity: 0.8;
}

/* 统计卡片 */
.stats-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 0;
  display: flex;
  justify-content: space-around;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.stat-item {
  text-align: center;
  flex: 1;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 60rpx;
  background: #e2e8f0;
}

.stat-number {
  font-size: 44rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 12rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #64748b;
}

/* 菜单区域 */
.menu-section {
  margin-bottom: 32rpx;
}

.menu-title {
  font-size: 28rpx;
  color: #94a3b8;
  font-weight: 500;
  margin-bottom: 16rpx;
  margin-left: 16rpx;
}

.menu-list {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f1f5f9;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8fafc;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.icon-record {
  background: #dbeafe;
}

.icon-task {
  background: #d1fae5;
}

.icon-settings {
  background: #f3e8ff;
}

.icon-about {
  background: #fef3c7;
}

.menu-text {
  font-size: 30rpx;
  color: #334155;
  font-weight: 500;
}

.menu-arrow {
  font-size: 36rpx;
  color: #94a3b8;
  font-weight: 300;
}

/* 退出登录 */
.logout-section {
  margin-top: 48rpx;
}

.btn-logout {
  width: 100%;
  height: 96rpx;
  background: #fff !important;
  color: #ef4444 !important;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx !important;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.btn-logout::after {
  border: none;
}

.btn-logout:active {
  background: #fef2f2 !important;
}