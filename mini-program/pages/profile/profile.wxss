.container {
  padding: 24rpx;
  padding-bottom: 60rpx;
  min-height: 100vh;
  background: #f8fafc;
}

/* 用户卡片 */
.user-card {
  background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  display: flex;
  align-items: center;
  color: #fff;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(99, 102, 241, 0.3);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 700;
  margin-right: 28rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.user-role {
  font-size: 26rpx;
  opacity: 0.8;
  margin-bottom: 4rpx;
}

.user-id {
  font-size: 22rpx;
  opacity: 0.6;
}

/* 统计卡片 */
.stats-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx 0;
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.stat-item {
  text-align: center;
  flex: 1;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 60rpx;
  background: #e2e8f0;
}

.stat-number {
  font-size: 40rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #64748b;
}

/* 区块卡片 */
.section-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1e293b;
  display: flex;
  align-items: center;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.view-all {
  font-size: 26rpx;
  color: #6366f1;
}

/* 7天趋势 */
.days-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.day-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.day-date {
  font-size: 24rpx;
  color: #64748b;
  width: 140rpx;
  flex-shrink: 0;
}

.day-bar-container {
  flex: 1;
  height: 24rpx;
  background: #f1f5f9;
  border-radius: 12rpx;
  overflow: hidden;
}

.day-bar {
  height: 100%;
  background: linear-gradient(90deg, #6366f1 0%, #818cf8 100%);
  border-radius: 12rpx;
  min-width: 8rpx;
}

.day-count {
  font-size: 24rpx;
  color: #6366f1;
  font-weight: 600;
  width: 80rpx;
  text-align: right;
  flex-shrink: 0;
}

/* 最近记录列表 */
.records-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  display: flex;
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  border-left: 6rpx solid #6366f1;
}

.record-left {
  margin-right: 20rpx;
}

.record-date {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.date-day {
  font-size: 32rpx;
  font-weight: 700;
  color: #6366f1;
  line-height: 1;
}

.date-month {
  font-size: 20rpx;
  color: #94a3b8;
}

.record-content {
  flex: 1;
}

.record-product {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.product-category {
  font-size: 22rpx;
  color: #6366f1;
  font-weight: 600;
  background: #eef2ff;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.product-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
}

.record-store {
  font-size: 26rpx;
  color: #64748b;
  margin-bottom: 8rpx;
}

.record-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-time {
  font-size: 24rpx;
  color: #94a3b8;
}

.record-price {
  font-size: 30rpx;
  font-weight: 700;
  color: #ef4444;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #94a3b8;
}

/* 菜单区域 */
.menu-section {
  margin-top: 8rpx;
}

.menu-title {
  font-size: 26rpx;
  color: #94a3b8;
  font-weight: 500;
  margin-bottom: 16rpx;
  margin-left: 16rpx;
}

.menu-list {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f1f5f9;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8fafc;
}

.menu-item.logout .menu-text {
  color: #ef4444;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.icon-about {
  background: #fef3c7;
}

.icon-logout {
  background: #fee2e2;
}

.menu-text {
  font-size: 30rpx;
  color: #334155;
  font-weight: 500;
}

.menu-arrow {
  font-size: 36rpx;
  color: #94a3b8;
  font-weight: 300;
}