<view class="login-container">
  <!-- Logo区域 -->
  <view class="logo-section">
    <view class="logo-circle">📊</view>
    <text class="logo-title">零售调研系统</text>
    <text class="logo-subtitle">调研人员登录</text>
  </view>

  <!-- 登录表单 -->
  <view class="login-form" wx:if="{{!isWechatLogin}}">
    <view class="form-group">
      <text class="form-label">用户名</text>
      <input 
        class="form-input" 
        type="text" 
        placeholder="请输入用户名" 
        value="{{username}}"
        bindinput="onUsernameInput"
        maxlength="20"
      />
    </view>

    <view class="form-group">
      <text class="form-label">密码</text>
      <input 
        class="form-input" 
        type="password" 
        placeholder="请输入密码" 
        value="{{password}}"
        bindinput="onPasswordInput"
        maxlength="20"
      />
    </view>

    <button 
      class="btn btn-primary login-btn" 
      bindtap="onLogin"
      disabled="{{loading}}"
      loading="{{loading}}"
    >
      {{loading ? '登录中...' : '登录'}}
    </button>

    <view class="login-options">
      <text class="option-link" bindtap="switchLoginType">
        使用微信一键登录 →
      </text>
    </view>
  </view>

  <!-- 微信登录 -->
  <view class="wechat-login" wx:else>
    <view class="wechat-tips">
      <text class="tips-icon">💡</text>
      <text class="tips-text">微信一键登录更便捷</text>
    </view>

    <button 
      class="btn btn-primary wechat-btn" 
      bindtap="onWechatLogin"
      disabled="{{loading}}"
    >
      <text class="wechat-icon">🌟</text>
      <text>{{loading ? '登录中...' : '微信一键登录'}}</text>
    </button>

    <view class="login-options">
      <text class="option-link" bindtap="switchLoginType">
        ← 使用账号密码登录
      </text>
    </view>
  </view>

  <!-- 底部提示 -->
  <view class="footer-tips">
    <text>如忘记密码，请联系管理员重置</text>
  </view>
</view>