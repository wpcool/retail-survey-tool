.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f0f4f8 0%, #e2e8f0 50%, #f1f5f9 100%);
  padding: 80rpx 48rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  margin-top: 40rpx;
}

.logo-circle {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(99, 102, 241, 0.3);
}

.logo-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 12rpx;
  letter-spacing: -2rpx;
}

.logo-subtitle {
  font-size: 28rpx;
  color: #64748b;
  letter-spacing: 4rpx;
}

/* 登录表单 */
.login-form {
  background: #fff;
  border-radius: 32rpx;
  padding: 48rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.login-form .form-group {
  margin-bottom: 32rpx;
}

.login-form .form-input {
  background: #f8fafc;
}

.login-btn {
  margin-top: 16rpx;
}

/* 微信登录 */
.wechat-login {
  background: #fff;
  border-radius: 32rpx;
  padding: 64rpx 48rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  text-align: center;
}

.wechat-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
  padding: 24rpx 32rpx;
  background: #f0fdf4;
  border-radius: 16rpx;
}

.tips-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.tips-text {
  font-size: 28rpx;
  color: #166534;
  font-weight: 500;
}

.wechat-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.wechat-icon {
  font-size: 36rpx;
}

/* 登录选项 */
.login-options {
  display: flex;
  justify-content: center;
  margin-top: 32rpx;
}

.option-link {
  font-size: 28rpx;
  color: #6366f1;
  font-weight: 500;
  padding: 16rpx 32rpx;
}

.option-link:active {
  opacity: 0.7;
}

/* 底部提示 */
.footer-tips {
  margin-top: auto;
  padding-top: 48rpx;
  text-align: center;
  font-size: 24rpx;
  color: #94a3b8;
}

/* 表单样式 */
.form-label {
  display: block;
  font-size: 28rpx;
  color: #334155;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 96rpx;
  padding: 0 32rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  transition: all 0.3s;
}

.form-input:focus {
  border-color: #6366f1;
  background: #fff;
}

/* 按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.35);
}

.btn-primary:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.25);
}

.btn-primary[disabled] {
  opacity: 0.6;
}