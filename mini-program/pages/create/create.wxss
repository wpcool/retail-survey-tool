.container {
  padding: 20rpx;
  padding-bottom: 60rpx;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  padding: 20rpx 0 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1e293b;
}

/* 任务提示横幅 */
.task-banner {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.banner-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.banner-text {
  font-size: 28rpx;
  color: #92400e;
  flex: 1;
}

/* 当前任务 */
.current-task {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.task-label {
  font-size: 24rpx;
  color: #1e40af;
  margin-bottom: 8rpx;
}

.task-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e3a8a;
}

/* 自动补全列表 */
.suggest-list {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: #fff;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  margin-top: 8rpx;
  max-height: 400rpx;
  overflow-y: auto;
  z-index: 100;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.suggest-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 2rpx solid #f1f5f9;
}

.suggest-item:last-child {
  border-bottom: none;
}

.suggest-item:active {
  background: #f8fafc;
}

.suggest-cat {
  font-size: 24rpx;
  color: #6366f1;
  font-weight: 600;
  background: #eef2ff;
  padding: 6rpx 14rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.suggest-name {
  flex: 1;
  font-size: 30rpx;
  color: #1e293b;
}

.suggest-spec {
  font-size: 24rpx;
  color: #94a3b8;
  margin-left: 12rpx;
  flex-shrink: 0;
}

/* 商品选择器 */
.items-selector {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

.item-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  transition: all 0.2s;
}

.item-option.selected {
  background: #eef2ff;
  border-color: #6366f1;
}

.item-option:active {
  background: #e0e7ff;
}

/* 调研次数数字标记 */
.item-count {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 700;
  background: #e2e8f0;
  color: #94a3b8;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.item-count.has-records {
  background: #10b981;
  color: white;
}

/* 进度文字 */
.progress-text {
  font-size: 26rpx;
  color: #10b981;
  font-weight: 600;
  margin-left: 16rpx;
}

.item-info {
  display: flex;
  align-items: center;
  flex: 1;
  gap: 16rpx;
}

.item-cat {
  font-size: 24rpx;
  color: #6366f1;
  font-weight: 600;
  background: #fff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.item-product {
  flex: 1;
  font-size: 30rpx;
  color: #1e293b;
  font-weight: 500;
}

.item-spec {
  font-size: 24rpx;
  color: #94a3b8;
  flex-shrink: 0;
}

.item-check {
  width: 48rpx;
  height: 48rpx;
  background: #6366f1;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  margin-left: 16rpx;
}

/* 表单卡片 */
.form-card {
  background: #fff;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.form-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 28rpx;
  display: flex;
  align-items: center;
}

.form-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-row {
  display: flex;
  gap: 24rpx;
}

.form-item-half {
  flex: 1;
  position: relative;
}

.form-label {
  font-size: 28rpx;
  color: #475569;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required {
  color: #ef4444;
}

.form-input {
  height: 90rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 0 28rpx;
  font-size: 30rpx;
  color: #1e293b;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #6366f1;
  background: #fff;
}

.price-input {
  padding-right: 80rpx;
}

.price-unit {
  position: absolute;
  right: 28rpx;
  bottom: 30rpx;
  font-size: 28rpx;
  color: #64748b;
}

.form-picker {
  height: 90rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 0 28rpx;
  font-size: 30rpx;
  color: #1e293b;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}

.form-picker.placeholder {
  color: #94a3b8;
}

.form-picker::after {
  content: '▼';
  position: absolute;
  right: 28rpx;
  color: #94a3b8;
  font-size: 20rpx;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 24rpx 28rpx;
  font-size: 30rpx;
  color: #1e293b;
  box-sizing: border-box;
}

/* 地址定位 */
.location-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.location-row .form-input {
  flex: 1;
}

.location-btn {
  width: 90rpx;
  height: 90rpx;
  background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.location-btn:active {
  opacity: 0.8;
}

.location-icon {
  font-size: 40rpx;
}

/* 提交按钮 */
.submit-section {
  margin-top: 20rpx;
  padding: 0 20rpx 40rpx;
}

.btn-submit {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%) !important;
  color: #fff !important;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 50rpx !important;
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.35) !important;
}

.btn-submit::after {
  border: none;
}

.btn-submit:active {
  opacity: 0.9;
}/* 拍照上传区域 */
.photo-section {
  margin-top: 12rpx;
}

.photo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.photo-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.photo-image {
  width: 100%;
  height: 100%;
}

.photo-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 44rpx;
  height: 44rpx;
  background: rgba(239, 68, 68, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  color: #fff;
  font-size: 32rpx;
  line-height: 1;
}

.photo-add {
  width: 200rpx;
  height: 200rpx;
  background: #f8fafc;
  border: 2rpx dashed #cbd5e1;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.photo-add:active {
  background: #f1f5f9;
  border-color: #6366f1;
}

.add-icon {
  font-size: 56rpx;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 500;
}

.add-tip {
  font-size: 22rpx;
  color: #94a3b8;
  margin-top: 4rpx;
}

.photo-tip {
  font-size: 24rpx;
  color: #94a3b8;
  margin-top: 16rpx;
}
/* 测试按钮样式 */
.btn-test {
  background: #0ea5e9;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  margin-top: 16rpx;
}

.btn-test::after {
  border: none;
}

.btn-test:active {
  background: #0284c7;
}

.test-tip {
  font-size: 24rpx;
  color: #64748b;
  margin-top: 16rpx;
  text-align: center;
}

/* picker 选择器样式 */
.picker {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #1e293b;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker.placeholder {
  color: #94a3b8;
}

.picker-arrow {
  font-size: 24rpx;
  color: #64748b;
}

/* 竞店信息展示 */
.competitor-section {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 20rpx 0;
  border: 2rpx solid #fcd34d;
}

.competitor-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #92400e;
}

.competitor-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.competitor-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.competitor-tag {
  background: #fff;
  color: #78350f;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  border: 2rpx solid #fbbf24;
  box-shadow: 0 2rpx 8rpx rgba(251, 191, 36, 0.3);
}
