.container {
  padding: 20rpx;
  padding-bottom: 60rpx;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  padding: 20rpx 0 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1e293b;
}

/* 任务提示横幅 */
.task-banner {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.banner-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.banner-text {
  font-size: 28rpx;
  color: #92400e;
  flex: 1;
}

/* 当前任务 */
.current-task {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.task-label {
  font-size: 24rpx;
  color: #1e40af;
  margin-bottom: 8rpx;
}

.task-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e3a8a;
}

/* 表单卡片 */
.form-card {
  background: #fff;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.form-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 28rpx;
  display: flex;
  align-items: center;
}

.form-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-row {
  display: flex;
  gap: 24rpx;
}

.form-item-half {
  flex: 1;
  position: relative;
}

.form-label {
  font-size: 28rpx;
  color: #475569;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required {
  color: #ef4444;
}

.form-input {
  height: 90rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 0 28rpx;
  font-size: 30rpx;
  color: #1e293b;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #6366f1;
  background: #fff;
}

.price-input {
  padding-right: 80rpx;
}

.price-unit {
  position: absolute;
  right: 28rpx;
  bottom: 30rpx;
  font-size: 28rpx;
  color: #64748b;
}

.form-picker {
  height: 90rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 0 28rpx;
  font-size: 30rpx;
  color: #1e293b;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}

.form-picker.placeholder {
  color: #94a3b8;
}

.form-picker::after {
  content: '▼';
  position: absolute;
  right: 28rpx;
  color: #94a3b8;
  font-size: 20rpx;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 24rpx 28rpx;
  font-size: 30rpx;
  color: #1e293b;
  box-sizing: border-box;
}

/* 地址定位 */
.location-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.location-row .form-input {
  flex: 1;
}

.location-btn {
  width: 90rpx;
  height: 90rpx;
  background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.location-btn:active {
  opacity: 0.8;
}

.location-icon {
  font-size: 40rpx;
}

/* 提交按钮 */
.submit-section {
  margin-top: 20rpx;
  padding: 0 20rpx 40rpx;
}

.btn-submit {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%) !important;
  color: #fff !important;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 50rpx !important;
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.35) !important;
}

.btn-submit::after {
  border: none;
}

.btn-submit:active {
  opacity: 0.9;
}